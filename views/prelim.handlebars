<!-- Prelim Score Sheet -->
<div class="container">
    <!-- Jumbotron -->
    <div class="jumbotron" style="background-color: black; color: white">
        <h1 class="text-center">{{round}} Competition</h1>
        <h2 class="text-center">{{division}}</h2>
        <h2 class="text-center">{{role}}</h2>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <form action="/scores" method="POST">
                <div class="form-group">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3 class="panel-title"><strong>{{heat}}</strong></h3>
                        </div>
                        <label for="judge">Judge</label>
                        <select id="Judge" name="judgeNum">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>                            
                        </select>
                        <label for="division">Division</label>
                        <select id="division" name="division">
                            <option value="novice">Novice</option>
                            <option value="intermediate">Intermediate</option>
                            <option value="advanced">Advanced</option>                            
                        </select>
                        <label for="round">Round</label>
                        <select id="round" name="round">
                            <option value="prelim">Prelim</option>
                            <option value="semi">SemiFinal</option>
                            <option value="final">Final</option>                            
                        </select>

                        <div class="panel-body">
                            <table class="table table-hover" id='prelim-heatOne'>
                                <thead>
                                    <tr>
                                        <th>Bib Number</th>
                                        <th>Role</th>
                                        <th>Score</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each list}}
                                    <tr>
                                        <td>{{this.bib_number}}</td>
                                        <td>{{role}}</td>
                                        <td>
                                            <div class="well">
                                                <b>YES</b>
                                                <input type="text" class="span2 dancer" value="3" name={{this.bib_number}} id="{{this.bib_number}}" data-slider-max="3" data-slider-min="1">
                                                <b>NO</b>
                                            </div>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary" id="score-prelims-btn" type="submit">Submit Scores</button>
            </form>
        </div>
    </div>
</div>
<!-- BELOW CODE IS CRITICAL. IT HANDLES HOW FORM DATA IS SENT TO OUR SERVER -->
<script type="text/javascript">
$(document).ready(function() {
    $('.dancer').slider();



});
</script>